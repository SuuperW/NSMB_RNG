<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platforms>AnyCPU;x64</Platforms>
    <Version>1.0</Version>
  </PropertyGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /y $(ProjectDir)7za.exe $(ProjectDir)$(OutDir)&#xD;&#xA;xcopy /y $(ProjectDir)systems.json $(ProjectDir)$(OutDir)&#xD;&#xA;xcopy /y $(ProjectDir)tiles.png $(ProjectDir)$(OutDir)&#xD;&#xA;xcopy /y $(ProjectDir)README.txt $(ProjectDir)$(OutDir)&#xD;&#xA;xcopy /y $(ProjectDir)7z_license.txt $(ProjectDir)$(OutDir)&#xD;&#xA;" />
  </Target>

</Project>
